{
  "name": "code-analyzer-fixer",
  "version": "1.0.0",
  "description": "Salesforce Code Analysis and Auto-Fix Tool",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint force-app/main/default/lwc/**/*.js",
    "lint:fix": "eslint force-app/main/default/lwc/**/*.js --fix",
    "scan": "sf scanner run --target force-app/ --format sarif --outfile analysis-results.sarif",
    "scan:detailed": "sf scanner run --target force-app/ --format json --outfile analysis-results.json",
    "postinstall": "sf plugins install @salesforce/sfdx-scanner"
  },
  "keywords": [
    "salesforce",
    "code-analysis",
    "static-analysis",
    "pmd",
    "eslint",
    "sarif",
    "auto-fix"
  ],
  "author": "CodeAnalyzerFixer",
  "license": "MIT",
  "dependencies": {
    "@salesforce/cli": "^2.20.7"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "@salesforce/eslint-plugin-lwc": "^1.7.2",
    "@salesforce/eslint-config-lwc": "^3.7.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Abhilash-Gundrajukuppam/CodeAnalyzerFixer.git"
  },
  "bugs": {
    "url": "https://github.com/Abhilash-Gundrajukuppam/CodeAnalyzerFixer/issues"
  },
  "homepage": "https://github.com/Abhilash-Gundrajukuppam/CodeAnalyzerFixer#readme"
}
